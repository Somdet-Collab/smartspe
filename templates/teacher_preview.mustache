<div class="smartspe-preview-container">

    <h2>Preview Smart SPE Evaluation</h2>
    <p>This is what students will see when they complete the evaluation.</p>

    {{#questions}}
    <div class="question-preview mb-3 p-3 border rounded">
        <strong>{{name}}</strong>
        <p>{{{text}}}</p>

        {{#options}}
        <div class="form-check ml-3">
            <input class="form-check-input" type="radio" disabled>
            <label class="form-check-label">{{{text}}}</label>
        </div>
        {{/options}}
    </div>
    {{/questions}}

    <div class="mt-3">
        <a href="{{returnurl}}" class="btn btn-secondary">Back to Activity</a>
    </div>

</div>
