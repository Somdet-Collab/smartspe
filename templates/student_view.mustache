<div class="smartspe-student-container">

  <h2>{{activityname}}</h2>
  <p>{{description}}</p>

  <form method="post" action="{{formaction}}">
    <input type="hidden" name="sesskey" value="{{sesskey}}">

    {{#evaluations}}
      <h3>{{title}}</h3>
      {{#membername}}
        <p><strong>{{membername}}</strong></p>
      {{/membername}}

      {{#questions}}
        <div class="question mb-3 p-3 border rounded">
            <strong>{{name}}</strong>
            <p>{{{text}}}</p>

            {{#options}}
              <div class="form-check ml-3">
                {{#is_self}}
                  <input class="form-check-input" type="radio" name="self_{{../id}}" value="{{id}}">
                {{/is_self}}
                {{#is_peer}}
                  <input class="form-check-input" type="radio" name="peer_{{../memberid}}_{{../id}}" value="{{id}}">
                {{/is_peer}}
                <label class="form-check-label">{{{answer}}}</label>
              </div>
            {{/options}}

            {{^options}}
              {{#is_self}}
                <textarea class="form-control" name="self_{{../id}}" rows="2" placeholder="Your response"></textarea>
              {{/is_self}}
              {{#is_peer}}
                <textarea class="form-control" name="peer_{{../memberid}}_{{../id}}" rows="2" placeholder="Your response"></textarea>
              {{/is_peer}}
            {{/options}}
        </div>
      {{/questions}}
    {{/evaluations}}

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Submit Evaluation</button>
    </div>
  </form>
</div>
